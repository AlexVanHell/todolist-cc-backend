{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "Backend for codeachido course",
  "main": "index.js",
  "scripts": {
    "start": "./node_modules/.bin/nodemon",
    "prestart:prod": "npm run build",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build": "tsc && npm run tslint",
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "path": "tspath"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|js)",
      "**/src/**/*.e2e.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexVanHell/todolist-cc-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexVanHell/todolist-cc-backend/issues"
  },
  "homepage": "https://github.com/AlexVanHell/todolist-cc-backend#readme",
  "dependencies": {
    "@tsed/common": "^5.6.1",
    "@tsed/core": "^5.6.1",
    "@tsed/di": "^5.6.1",
    "@tsed/swagger": "^5.6.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "mongoose": "^5.5.1",
    "morgan": "^1.9.1",
    "swagger-ui-express": "^4.0.2",
    "ts-log-debug": "^5.0.1",
    "typegoose": "^5.6.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mongodb": "^3.1.23",
    "@types/mongoose": "^5.3.26",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.4",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  }
}
